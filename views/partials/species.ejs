<div class="container-fluid mt-5">
    <h2 class="p-3 text-center">Animals for Adoption - species</h2>
    <div class="list-group">
        <div class="row px-3 py-1 w-100">
            <span class="col py-1 bg-noroff">Id</span>
            <span class="col py-1 bg-noroff">Name</span>
            <span class="col py-1 bg-noroff">Options</span>
        </div>
        <% species.forEach(function(species) { %>
            <div class="row px-3 py-1 w-100">
                <span class="col py-1 bg-light">
                    <%=species.id%>
                </span>
                <span class="col py-1 bg-light">
                    <%=species.SpecieName%>
                </span>
                <span class="col py-1 bg-light text-center">
                    <button class="btn-sm btn-warning" onclick="updateSpecies(<%=species.id%>)">Update species</button>
                    <button class="btn-sm btn-danger" onclick="deleteSpecies(<%=species.id%>)">Delete species</button>
                </span>
            </div>
            <% }); %>
                <hr>
                <div class="row">
                    <div class="col-4"></div>
                    <div class="col-4 text-center mt-2">
                            <button class="btn btn-success" id="btn-add-animal" onclick="addSpecies()">Add New Species</button>
                    </div>
                    <div class="col-4"></div>
                </div>
    </div>
</div>