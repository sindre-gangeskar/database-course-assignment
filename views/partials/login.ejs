<% if(user){%>
    <p>You are currently logged in as the <b>
            <%=user.username%>
        </b></p>
    <form action="/logout" method="post">
        <button class="logout" type="submit">Sign out</button>
    </form>
    <%}%>
        <div id="login-form">
            <form action="/login/password" method="post">
                <section>
                    <label for="username">Username</label>
                    <input id="username" name="username" type="text" autocomplete="username" required autofocus>
                </section>
                <section>
                    <label for="current-password">Password</label>
                    <input id="current-password" name="password" type="password" autocomplete="current-password" required>
                </section>
                <button type="submit">Sign in</button>
            </form>
            <hr>
            <p class="help">Don't have an account? <a href="/signup">Sign up</a></p>
        </div>

        <footer class="info">
            <p>Created by <a href="https://www.noroff.no/en/">Noroff</a></p>
            <p>Part of Back-end Development Program at Noroff</p>
            <p>Authentication powered by <a href="https://www.passportjs.org">Passport</a></p>
        </footer>